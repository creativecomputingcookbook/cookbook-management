                "extra_properties": {
                    "type": "iframe"
                },
                "binding": "src"
            },
            {
                "type": "image",
                "name": "Image",
                "description": "An image for the view.",
                "extra_inputs": [
                    {
                        "id": "title",
                        "type": "text",
