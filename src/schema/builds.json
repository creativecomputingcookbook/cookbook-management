{
    "id": "builds",
    "name": "Builds",
    "description": "Builds pages describe each completed project.",
    "components": [
        {
            "id": "gallery",
            "type": "open_field_list",
            "name": "Gallery",
            "description": "Videos (in iframe) or pictures demonstrating various views of the build.",
            "choices": [
                {
                    "id": "video",
                    "type": "iframe",
                    "name": "Video",
                    "description": "Enter the YouTube video URL.",
                    "extra_inputs": [
                        {
                            "id": "title",
                            "type": "text",
                            "name": "Title",
                            "description": "A short title. Displayed as clickable buttons on the side of the gallery.",
                            "short": true
                        }
                    ],
                    "transform": "youtube",
                    "extra_properties": {
                        "type": "iframe"
                    },
                    "binding": "src"
                },
                {
                    "id": "image",
                    "type": "image",
                    "name": "Image",
                    "description": "An image for the view.",
                    "extra_inputs": [
                        {
                            "id": "title",
                            "type": "text",
                            "name": "Title",
                            "description": "A short title. Displayed as clickable buttons on the side of the gallery.",
                            "short": true
                        }
                    ],
                    "extra_properties": {
                        "type": "image"
                    },
                    "binding": "src"
                }
            ],
            "extra_properties": {
                "type": "gallery"
            },
            "binding": "items"
        },
        {
            "id": "introduction",
            "type": "text",
            "name": "Introduction",
            "description": "An introduction for the build.",
            "extra_properties": {
                "type": "text",
                "heading": "Introduction"
            },
            "binding": "text"
        },
        {
            "id": "materials",
            "type": "hidden",
            "extra_properties": {
                "fields": [
                    {
                        "heading": "Electronics",
                        "tags_from": "Electronics"
                    },
                    {
                        "heading": "Supplies",
                        "tags_from": "Supplies" 
                    }
                ],
                "heading": "Materials",
                "type": "materials"
            }
        },
        {
            "id": "circuit",
            "type": "image",
            "name": "Circuit Assembly",
            "description": "A picture of the circuit assembly. Use <a href=\"https://docs.google.com/presentation/d/14PSkZWNgF_Ard2_U5vao2H7x7XiD0aWRXZO-mPLCf98/edit?usp=sharing\" target=\"_blank\" rel=\"noreferrer\">this template</a> to create your own circuit assembly diagram.",
            "extra_properties": {
                "type": "circuit"
            },
            "binding": "src"
        },
        {
            "id": "makecode",
            "type": "iframe",
            "name": "Code",
            "description": "Code component for demonstrating code blocks. Enter the MakeCode or Arduino URL.",
            "transform": ["arduino", "makecode"],
            "extra_properties": {
                "type": "makecode",
                "heading": "Code"
            },
            "binding": "url"
        },
        {
            "id": "subcomponents",
            "type": "open_field_list",
            "name": "Subcomponents",
            "description": "Introduce any subcomponents you have.",
            "choices": [
                {
                    "id": "img_src",
                    "type": "image",
                    "name": "Subcomponent",
                    "description": "Attach an image for the subcomponent.",
                    "binding": "img_src",
                    "extra_inputs": [
                        {
                            "id": "title",
                            "type": "text",
                            "name": "Title",
                            "description": "Title of subcomponent.",
                            "short": true
                        },
                        {
                            "id": "text",
                            "type": "text",
                            "name": "Description",
                            "description": "Description of subcomponent."
                        }
                    ]
                }
            ],
            "extra_properties": {
                "type": "subcomponents",
                "heading": "Subcomponents"
            },
            "binding": "fields"
        }
    ]
}